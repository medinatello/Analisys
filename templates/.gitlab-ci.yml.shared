# GitLab CI/CD Pipeline - edugo-shared
# Este archivo debe estar en la raÃ­z del repositorio edugo-shared como .gitlab-ci.yml

stages:
  - test
  - lint
  - release

variables:
  GO_VERSION: "1.23"
  COVERAGE_THRESHOLD: "70"

# Cache de dependencias Go
cache:
  key: ${CI_COMMIT_REF_SLUG}
  paths:
    - .go/pkg/mod/

before_script:
  - echo "ðŸš€ Pipeline started for ${CI_PROJECT_NAME}"
  - echo "ðŸ“¦ Commit: ${CI_COMMIT_SHORT_SHA}"
  - echo "ðŸŒ¿ Branch: ${CI_COMMIT_REF_NAME}"

# ========================================
# STAGE: TEST
# ========================================

test:
  stage: test
  image: golang:${GO_VERSION}-alpine
  tags:
    - docker
  before_script:
    - apk add --no-cache git gcc musl-dev
    - go version
  script:
    - echo "ðŸ“¥ Downloading dependencies..."
    - go mod download
    - go mod verify

    - echo "ðŸ§ª Running tests..."
    - go test -v -race -coverprofile=coverage.txt -covermode=atomic ./...

    - echo "ðŸ“Š Generating coverage report..."
    - go tool cover -func coverage.txt | tee coverage-summary.txt

    - echo "ðŸŽ¯ Checking coverage threshold..."
    - |
      COVERAGE=$(go tool cover -func coverage.txt | grep total | awk '{print $3}' | sed 's/%//')
      echo "Coverage: ${COVERAGE}%"
      if (( $(echo "$COVERAGE < $COVERAGE_THRESHOLD" | bc -l) )); then
        echo "âŒ Coverage ${COVERAGE}% is below threshold ${COVERAGE_THRESHOLD}%"
        exit 1
      fi
      echo "âœ… Coverage ${COVERAGE}% meets threshold ${COVERAGE_THRESHOLD}%"
  coverage: '/total:.*\d+.\d+%/'
  artifacts:
    reports:
      coverage_report:
        coverage_format: cobertura
        path: coverage.txt
    paths:
      - coverage.txt
      - coverage-summary.txt
    expire_in: 30 days
  only:
    - branches
    - merge_requests
    - main
    - develop

# ========================================
# STAGE: LINT
# ========================================

lint:
  stage: lint
  image: golang:${GO_VERSION}-alpine
  tags:
    - docker
  before_script:
    - apk add --no-cache git gcc musl-dev
  script:
    - echo "ðŸ” Running staticcheck..."
    - go install honnef.co/go/tools/cmd/staticcheck@latest
    - staticcheck ./...

    - echo "ðŸ” Running go vet..."
    - go vet ./...

    - echo "ðŸ” Checking formatting..."
    - test -z "$(gofmt -l .)"

    - echo "âœ… All linters passed"
  allow_failure: true  # No bloquear merge si falla lint
  only:
    - merge_requests
    - develop
    - main

# ========================================
# STAGE: RELEASE
# ========================================

release:
  stage: release
  image: alpine:latest
  tags:
    - docker
  script:
    - echo "ðŸŽ‰ Creating release for tag ${CI_COMMIT_TAG}"
    - echo "ðŸ“¦ Module: github.com/edugo/edugo-shared@${CI_COMMIT_TAG}"
    - echo ""
    - echo "Para usar esta versiÃ³n en tus servicios:"
    - echo "  go get github.com/edugo/edugo-shared@${CI_COMMIT_TAG}"
    - echo ""
    - echo "âœ… Release completed"
  only:
    - tags
  except:
    - branches

# ========================================
# NOTIFICACIONES
# ========================================

# Job que siempre corre al final
pipeline-status:
  stage: .post
  image: alpine:latest
  tags:
    - docker
  script:
    - |
      if [ "$CI_PIPELINE_STATUS" == "success" ]; then
        echo "âœ… Pipeline completed successfully"
      else
        echo "âŒ Pipeline failed"
        exit 1
      fi
  when: always
