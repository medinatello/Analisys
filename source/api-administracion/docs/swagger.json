    "definitions": {
        "CreateGuardianRelationRequest": {
            "type": "object",
            "required": [
                "guardian_id",
                "relationship_type",
                "student_id"
            ],
            "properties": {
                "guardian_id": {
                    "type": "string",
                    "example": "uuid-guardian-123"
                },
                "relationship_type": {
                    "type": "string",
                    "enum": [
                        "father",
                        "mother",
                        "guardian",
                        "other"
                    ],
                    "example": "father"
                },
                "student_id": {
                    "type": "string",
                    "example": "uuid-student-456"
                }
            }
        },
        "CreateSchoolResponse": {
            "type": "object",
            "properties": {
                "school_id": {
                    "type": "string",
                    "example": "school-uuid-123"
                }
            }
        },
        "CreateSubjectResponse": {
            "type": "object",
            "properties": {
                "subject_id": {
                    "type": "string",
                    "example": "subject-uuid-123"
                }
            }
        },
        "CreateUnitResponse": {
            "type": "object",
            "properties": {
                "unit_id": {
                    "type": "string",
                    "example": "unit-uuid-123"
                }
            }
        },
        "CreateUserRequest": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "usuario@example.com"
                },
                "name": {
                    "type": "string",
                    "example": "Juan Pérez"
                },
                "password": {
                    "type": "string",
                    "example": "password123"
                },
                "role": {
                    "type": "string",
                    "example": "teacher"
                },
                "school_id": {
                    "type": "string",
                    "example": "school-uuid-123"
                }
            }
        },
        "CreateUserResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "example": "Usuario creado"
                },
                "user_id": {
                    "type": "string",
                    "example": "user-uuid-123"
                }
            }
        },
        "ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "Invalid request"
                },
                "message": {
                    "type": "string",
                    "example": "Field 'guardian_id' is required"
                }
            }
        },
        "GlobalStatsResponse": {
            "type": "object",
            "properties": {
                "active_users_30d": {
                    "type": "integer",
                    "example": 980
                },
                "total_materials": {
                    "type": "integer",
                    "example": 450
                },
                "total_users": {
                    "type": "integer",
                    "example": 1250
                }
            }
        },
        "GuardianRelationResponse": {
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string",
                    "example": "2025-01-15T10:00:00Z"
                },
                "guardian_id": {
                    "type": "string",
                    "example": "uuid-guardian-123"
                },
                "id": {
                    "type": "string",
                    "example": "uuid-relation-789"
                },
                "relationship_type": {
                    "type": "string",
                    "example": "father"
                },
                "student_id": {
                    "type": "string",
                    "example": "uuid-student-456"
                }
            }
        },
        "SubjectResponse": {
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string",
                    "example": "2025-01-01T00:00:00Z"
                },
                "description": {
                    "type": "string",
                    "example": "Curso de matemáticas"
                },
                "id": {
                    "type": "string",
                    "example": "uuid-subject-101"
                },
                "metadata": {
                    "type": "object",
                    "additionalProperties": true
                },
                "name": {
                    "type": "string",
                    "example": "Matemáticas"
                },
                "updated_at": {
                    "type": "string",
                    "example": "2025-01-15T10:00:00Z"
                }
            }
        },
        "SuccessResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "example": "Operación exitosa"
                }
            }
        },
        "UpdateSubjectRequest": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string",
                    "example": "Curso avanzado de matemáticas"
                },
                "metadata": {
                    "type": "object",
                    "additionalProperties": true
                },
                "name": {
                    "type": "string",
                    "example": "Matemáticas Avanzadas"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
